<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ServicesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Save People Life"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_margin="20dp"
                    android:background="@android:color/black"
                    tools:ignore="DuplicateIds" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/sos_card"
                                android:layout_width="100dp"
                                app:cardBackgroundColor="@color/white"
                                android:clickable="true"
                                app:cardElevation="2dp"
                                android:layout_height="118dp"
                                android:layout_marginLeft="20dp">

                                <ImageView
                                    android:id="@+id/sosimg"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/sos" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:gravity="center"
                                    android:text="@string/sos"
                                    android:textColor="@color/black"
                                    android:textSize="10sp" />

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/traffic_accident_card"
                                android:layout_width="100dp"
                                android:layout_height="118dp"
                                android:layout_marginLeft="30dp">


                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/accident" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="85dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:text="Report Traffic Accident"
                                    android:textSize="12sp" />


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/unknown_accident_card"
                                android:layout_width="100dp"
                                android:layout_height="118dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="15dp">

                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/unknown_accident" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:gravity="center"
                                    android:text="Report Unknown Accident"
                                    android:textSize="12sp" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/victim_support_card"
                                android:layout_width="100dp"
                                android:layout_height="118dp"
                                android:layout_marginLeft="20dp">

                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/victimsupport" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="85dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:text="Victim Support Program"
                                    android:textSize="12sp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25dp"
                        android:text="Criminial Services"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="20dp"
                        android:background="@android:color/black"
                        tools:ignore="DuplicateIds" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/report_crime_card"
                                android:layout_width="100dp"
                                android:layout_height="125dp"
                                android:layout_marginLeft="20dp">


                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/report_crime" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:gravity="center"
                                    android:text="Report Crime"
                                    android:textSize="12sp" />


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/info_provide_card"
                                android:layout_width="100dp"
                                android:layout_height="125dp"
                                android:layout_marginLeft="30dp">

                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/provide_info" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:gravity="center"
                                    android:text="Provide Information"
                                    android:textSize="12sp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/report_enquiry_card"
                                android:layout_width="100dp"
                                android:layout_height="125dp"
                                android:layout_marginLeft="30dp">

                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/pilice_report_inquiry" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:gravity="center"
                                    android:text="Police Report Inquiry"
                                    android:textSize="12sp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Traffic Services"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_margin="20dp"
                        android:background="@android:color/black"
                        tools:ignore="DuplicateIds" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="00dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/fine_pay_card"
                                android:layout_width="100dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="20dp">

                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/fine_pay" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:gravity="center"
                                    android:text="Fine Payment"
                                    android:textSize="12sp" />

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/View_receipt_card"
                                android:layout_width="100dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="30dp">


                                <ImageButton
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/view_receipt" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="86dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:text="View Receipt"
                                    android:textSize="12sp" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>









<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="1dp"
            app:cardCornerRadius="25dp">


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                tools:ignore="UselessParent">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/ecr_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Login"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <EditText
                        android:id="@+id/user"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/my_border"
                        android:drawableStart="@drawable/user2"
                        android:drawablePadding="12dp"
                        android:drawableTint="@drawable/edittext_selector"
                        android:ems="10"
                        android:hint="Email"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:maxLength="13"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@drawable/edittext_selector"
                        android:textColorHighlight="@drawable/selector"
                        android:textColorHint="#808080"
                        android:drawableLeft="@drawable/user2" />


                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/my_border"
                        android:drawableStart="@drawable/lock"
                        android:drawablePadding="12dp"
                        android:drawableTint="@drawable/edittext_selector"
                        android:ems="10"
                        android:hint="Password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@drawable/edittext_selector"
                        android:textColorHint="#808080"
                        android:drawableLeft="@drawable/lock" />

                    <TextView
                        android:id="@+id/forgot_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="10dp"
                        android:layout_marginStart="30dp"
                        android:text="Forget Password ?"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="30dp" />

                    <Button
                        android:id="@+id/report_crime_img"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="00dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/my_border"
                        android:backgroundTint="@drawable/button_selector"
                        android:clickable="true"
                        android:onClick="true"
                        android:text="Login"

                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:ignore="OnClick"
                        android:layout_marginRight="00dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginBottom="15dp"
                        android:text="Don't have an account?"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="80dp" />

                    <TextView
                        android:id="@+id/textReg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Sign Up"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="5dp" />


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>